<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="cn.com.edu.aib.trafficclient_2017gb.osc.trafficlight.TrafficFragment">

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:textColor="#333"
            android:text="排序"
            android:textSize="30sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_height="wrap_content" />


        <Spinner
            android:id="@+id/tra_spinner"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="40dp"></Spinner>


        <TextView
            android:layout_width="1dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/tra_query"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:text="查询"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/tra_muiltRecharge"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:text="批量设置"
            android:layout_height="wrap_content" />



    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="30dp">


        <TextView
            android:background="@drawable/osc_tra_stroke"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#333"
            android:text="路口"
            android:textSize="18sp"
            android:textStyle="normal"
            android:singleLine="true"
            android:layout_height="match_parent" />

        <TextView
            android:background="@drawable/osc_tra_stroke"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#333"
            android:text="红灯时长"
            android:textSize="18sp"
            android:textStyle="normal"
            android:singleLine="true"
            android:layout_height="match_parent" />

        <TextView
            android:background="@drawable/osc_tra_stroke"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#333"
            android:text="黄灯时长"
            android:textSize="18sp"
            android:textStyle="normal"
            android:singleLine="true"
            android:layout_height="match_parent" />

        <TextView
            android:background="@drawable/osc_tra_stroke"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#333"
            android:text="绿灯时长"
            android:textSize="18sp"
            android:textStyle="normal"
            android:singleLine="true"
            android:layout_height="match_parent" />


        <TextView
            android:background="@drawable/osc_tra_stroke"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#333"
            android:text="操作项"
            android:textSize="18sp"
            android:textStyle="normal"
            android:singleLine="true"
            android:layout_height="match_parent" />


        <TextView
            android:background="@drawable/osc_tra_stroke"
            android:layout_width="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#333"
            android:text="设置"
            android:textSize="18sp"
            android:textStyle="normal"
            android:singleLine="true"
            android:layout_height="match_parent" />




    </LinearLayout>


    <ListView
        android:id="@+id/tra_listview"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>


</LinearLayout>
