<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="18dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingRight="18dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/rec_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017.05.01"/>
        <TextView
            android:id="@+id/rec_Week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期一"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/rec_czPeo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值人 : XXX"/>
        <TextView
            android:id="@+id/rec_carNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌号 : 粤A 888888"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/rec_czMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值 : 100"/>
        <TextView
            android:id="@+id/rec_carMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="余额 : 120"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值时间"/>
        <TextView
            android:id="@+id/rec_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017.05.01"/>
    </LinearLayout>

</LinearLayout>