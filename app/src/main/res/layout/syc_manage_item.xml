<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_item"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_id"
        android:layout_width="35dp"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:text="1"/>
    <ImageView
        android:id="@+id/iv_carLogo"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:src="@mipmap/baoma"/>
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="35dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_carNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="辽A10001"/>
        <TextView
            android:id="@+id/tv_carOwner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车主 : 张三"/>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="35dp"
        android:id="@+id/tv_carMoney"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="余额 : 100元"/>
    <CheckBox
        android:id="@+id/cz_checkbox"
        android:layout_marginLeft="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/cz_btn"
        android:layout_marginLeft="35dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="充值"/>
</LinearLayout>
